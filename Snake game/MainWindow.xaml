<Window x:Class="Snake_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake_game"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="640" ResizeMode="NoResize">
    <Grid Background="#FFF5ED95">

        <Canvas Name="paintCanvas" Background="White" Width="634" Height="670" VerticalAlignment="Top"/>
        <Button x:Name="Stop" Content="Пауза" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="40" Width="98" FontFamily="Bahnschrift" FontSize="30" Margin="536,0,0,0" Background="#FFBD2A2A" Foreground="White" Click="Stop_Click"/>
        <Frame Name="MainFrame" HorizontalAlignment="Left" Width="634" NavigationUIVisibility="Hidden" BorderBrush="#FFAC2727" />
        <TextBlock x:Name="Score" Text="0" HorizontalAlignment="Left" Margin="92,4,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="30" Width="190"/>
        <TextBox  Text="Счёт:" HorizontalAlignment="Left" Margin="2,2,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="86" FontFamily="Bahnschrift" FontSize="30" Background="{x:Null}" TextAlignment="Right" BorderBrush="{x:Null}"/>
    </Grid>
</Window>
